script.
  async function logout() {
    await fetch("/session", { method: "DELETE", credentials: "same-origin" });
    window.location.replace("/");
  }

header.mb-3
  nav.navbar.navbar-expand-sm.border-bottom.py-3.bg-dark.fixed-top
    .container-xl
      a.navbar-brand(href="/") psi hackers
      button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse.justify-content-end#navbar
        ul.navbar-nav.gap-1
          if currentUser
            li.nav-item
              a.btn.btn-outline-primary(href="javascript:void(0)") #{currentUser.username}
            if !currentUser.is_member
              li.nav-item
                a.btn.btn-primary(href="/join") Join the club
            li.nav-item
              a.btn.btn-primary(href="javascript:void(0)" "onclick"="logout()") Sign out
          else
            li.nav-item
              a.btn.btn-primary(href="/login") Login
            li.nav-item
              a.btn.btn-primary(href="/register") Register
  
  script.
    document.querySelector('body').setAttribute("style", `padding-top: ${document.querySelector('nav').offsetHeight}px`); 